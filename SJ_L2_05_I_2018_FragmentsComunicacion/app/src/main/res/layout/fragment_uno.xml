<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffaaaa"
    tools:context="com.miramicodigo.fragmentscomunicacion.UnoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnUnoADos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar de Uno a Dos"/>

        <Button
            android:id="@+id/btnUnoATres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviar de Uno a Tres"/>

        <TextView
            android:id="@+id/tvUnoRecibido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mensaje Recibido"
            android:gravity="center_horizontal"/>

    </LinearLayout>
</FrameLayout>
